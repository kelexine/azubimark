<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application themes -->
    <style name="Base.Theme.AzubiMark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="colorOutlineVariant">@color/md_theme_light_outlineVariant</item>
        
        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.AzubiMark.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.AzubiMark.DisplayMedium</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.AzubiMark.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.AzubiMark.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.AzubiMark.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.AzubiMark.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.AzubiMark.TitleMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.AzubiMark.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.AzubiMark.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.AzubiMark.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.AzubiMark.LabelLarge</item>
        
        <!-- Elevation and Shapes -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AzubiMark.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.AzubiMark.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AzubiMark.LargeComponent</item>
    </style>

    <style name="Theme.AzubiMark" parent="Base.Theme.AzubiMark" />
    
    <!-- Enhanced Typography Styles with better readability -->
    <style name="TextAppearance.AzubiMark.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:fontWeight">300</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:fontWeight">300</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">600</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">600</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineSpacingMultiplier">1.7</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineSpacingMultiplier">1.6</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <!-- Code and monospace typography -->
    <style name="TextAppearance.AzubiMark.Code" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">monospace</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.CodeBlock" parent="TextAppearance.AzubiMark.Code">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>
    
    <!-- Navigation outline styles -->
    <style name="TextAppearance.AzubiMark.OutlineItem" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.OutlineItem.H1" parent="TextAppearance.AzubiMark.OutlineItem">
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.OutlineItem.H2" parent="TextAppearance.AzubiMark.OutlineItem">
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="TextAppearance.AzubiMark.OutlineItem.H3" parent="TextAppearance.AzubiMark.OutlineItem">
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Shape Styles -->
    <style name="ShapeAppearance.AzubiMark.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>
    
    <style name="ShapeAppearance.AzubiMark.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>
    
    <style name="ShapeAppearance.AzubiMark.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">@dimen/corner_radius_large</item>
    </style>
    
    <!-- Enhanced Code Block Style with better contrast -->
    <style name="Widget.AzubiMark.CodeBlock" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/code_block_corner_radius</item>
        <item name="cardElevation">@dimen/elevation_card</item>
        <item name="cardBackgroundColor">@color/code_block_background</item>
        <item name="android:layout_margin">@dimen/code_block_margin</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
    </style>
    
    <!-- Enhanced Button Styles -->
    <style name="Widget.AzubiMark.Button.Copy" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconSize">24dp</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
    </style>
    
    <!-- Outline item styles -->
    <style name="Widget.AzubiMark.OutlineItem" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/outline_item_height</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">@dimen/spacing_md</item>
        <item name="android:paddingEnd">@dimen/spacing_md</item>
        <item name="android:textAlignment">textStart</item>
        <item name="cornerRadius">@dimen/corner_radius_small</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xs</item>
    </style>
    
    <!-- Search bar style -->
    <style name="Widget.AzubiMark.SearchBar" parent="Widget.Material3.SearchBar">
        <item name="android:layout_height">@dimen/search_bar_height</item>
        <item name="android:layout_margin">@dimen/search_bar_margin</item>
        <item name="backgroundTint">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <!-- Progress indicator style -->
    <style name="Widget.AzubiMark.ProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorSurfaceVariant</item>
        <item name="trackThickness">3dp</item>
        <item name="indicatorCornerRadius">2dp</item>
        <item name="trackCornerRadius">2dp</item>
    </style>
</resources>
